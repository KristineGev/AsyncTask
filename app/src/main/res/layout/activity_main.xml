<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/downloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_label"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/margin_end"
        />

    <TextView
        android:id="@+id/state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="@string/download_started"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/margin_end"
        android:layout_marginBottom="@dimen/margin_end"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginStart="@dimen/margin_end"
        android:layout_marginTop="@dimen/margin_end"
        android:layout_marginBottom="@dimen/margin_end"
        android:max="100"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/download_percents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="0 %"
        android:textSize="@dimen/text_size" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_end"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/margin_end"
        android:layout_marginBottom="@dimen/margin_end"/>

</LinearLayout>